#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=./lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

mkdir -p "$ASDF_DOWNLOAD_PATH"

# Resolve partial versions to latest match
resolved_version=""
if ! resolved_version=$(resolve_version "$ASDF_INSTALL_VERSION"); then
	fail "Failed to resolve version: $ASDF_INSTALL_VERSION"
fi

if [[ "$resolved_version" != "$ASDF_INSTALL_VERSION" ]]; then
	echo "* Resolving $ASDF_INSTALL_VERSION to latest matching version: $resolved_version"
fi

echo "* Downloading $TOOL_NAME release $resolved_version..."

ensure_xcodes_installed

echo "* This may require your Apple ID credentials and can take a while..."
echo "* Note: Download may be skipped if authentication fails - installation will download directly"

# Try to download, but don't fail if it doesn't work (install can handle direct download)
if xcodes download "$resolved_version" --directory "$ASDF_DOWNLOAD_PATH"; then
	echo "* Xcode $resolved_version downloaded successfully to $ASDF_DOWNLOAD_PATH"
else
	echo "* Download failed, but installation will attempt direct download when needed"
	echo "* This is normal if Apple ID authentication is not available"
	# Create empty download directory so asdf knows download "completed"
	touch "$ASDF_DOWNLOAD_PATH/.download-attempted"
fi
